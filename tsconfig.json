{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declarationDir": "build/typings",
    "module": "esnext",
    "target": "es2020",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "sourceMap": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "tests",
    "build"
  ]
}